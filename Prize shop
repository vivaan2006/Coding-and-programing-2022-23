import javax.swing.*;     
import java.awt.*;
import java.awt.event.ActionListener;

public class PrizeShop extends MyFrame implements ActionListener {
       JFrame Screen = new JFrame();
       JLabel WelcomeLabel = new JLabel("Prize shop");
    PrizeShop() {
        WelcomeLabel.setBounds(100,40,200,200);
        WelcomeLabel.setFont(new Font(null, Font.PLAIN,35));
        Screen.add(WelcomeLabel);
        Screen.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Screen.setSize(900, 600);
        Screen.setLayout(null);
        Screen.setVisible(true);

    }
}
class PastWinners extends MyFrame implements ActionListener {       !!!!!// check about this one seperate or super classes//!!!!!!!!!?
    JFrame Screen = new JFrame();
    JLabel Welcomelabel = new JLabel("Past Winners");

    PastWinners() {
        Welcomelabel.setBounds(100, 40, 200, 200);
        Welcomelabel.setFont(new Font(null, Font.PLAIN, 25));
        Screen.add(Welcomelabel);
        Screen.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Screen.setSize(900, 600);
        Screen.setLayout(null);
        Screen.setVisible(true);
    }
}
