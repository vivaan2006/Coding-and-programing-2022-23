
import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.HashMap;

public class GUI extends MyFrame implements ActionListener {
    static IdPassword Id = new IdPassword();

    JLabel messageLabel = new JLabel();
    private static JLabel userLabel;
    private static JTextField userText;
    private static JLabel passwordLabel;
    private static JPasswordField Passwordtext;
    private static JButton button;
    private static JLabel success;
    private static JLabel adminLabel;
    private static JLabel adminuser;
   private static JTextField adminText;
    private static JLabel adminPassword;
    private static JPasswordField adminPasswordBox;
    private static JButton adminButton;
    private static JLabel adminSuccess;
    private static JFrame frame;


    public static void main(String[] args) {
        GUI gui = new GUI();

    }

    public GUI() {

        //  image and background
        frame = new JFrame();
        ImageIcon img = new ImageIcon(this.getClass().getResource("Sunset-900x600.jpg"));
        JLabel background = new JLabel(img);
        background.setSize(900, 600);

        //student login bold characters//
        JLabel StudentLabel = new JLabel("Student Login");
        StudentLabel.setBounds(90, 100, 350, 50);
        StudentLabel.setFont(new Font("Serif", Font.BOLD, 30));
        background.add(StudentLabel);

        //user name//
        userLabel = new JLabel("Username");
        userLabel.setBounds(25, 200, 80, 25);
        background.add(userLabel);

        //username textbox//
        userText = new JTextField(20);
        userText.setBounds(115, 200, 165, 25);
        background.add(userText);

        //password//
        passwordLabel = new JLabel("Password");
        passwordLabel.setBounds(25, 250, 80, 25);
        background.add(passwordLabel);
        //password textbox//
        Passwordtext = new JPasswordField(20);
        Passwordtext.setBounds(115, 250, 165, 25);
        background.add(Passwordtext);
        //press here button//
        button = new JButton("Login");
        button.setBounds(115, 300, 150, 25);
        button.addActionListener(this);
        background.add(button);

        //success//
        success = new JLabel("");
        success.setBounds(118, 270, 300, 25);
        background.add(success);

        //success for Admin//
        adminSuccess = new JLabel("");
        adminSuccess.setBounds(590, 270, 150, 25);
        background.add(adminSuccess);

        //admin login bold characters//

        adminLabel = new JLabel("Administrator Login");
        adminLabel.setBounds(560, 100, 350, 50);
        adminLabel.setFont(new Font("Serif", Font.BOLD, 30));
        background.add(adminLabel);

        //admin username //

        adminuser = new JLabel("Username");
        adminuser.setBounds(520, 200, 80, 25);// change x
        background.add(adminuser);

        //admin usertextbox//

        adminText = new JTextField(20);
        adminText.setBounds(590, 200, 165, 25);
        background.add(adminText);

        //admin password//
        adminPassword = new JLabel("Password"); // change x//
        adminPassword.setBounds(520, 250, 80, 25);
        background.add(adminPassword);

        //admin password textbox//
        adminPasswordBox = new JPasswordField(20);
        adminPasswordBox.setBounds(590, 250, 165, 25);
        background.add(adminPasswordBox);

        //login button for admin//
        adminButton = new JButton("Login");
        adminButton.setBounds(600, 300, 150, 25);
        adminButton.addActionListener(this);
        background.add(adminButton);

//white background //
        frame.add(background);
        frame.setSize(900, 600);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.add(background);
        background.setLayout(null);
        frame.setVisible(true);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        String user = userText.getText();
        String Password = Passwordtext.getText();
        String adminUser = adminText.getText();
        String adminPassword = adminPasswordBox.getText();
        System.out.println(user + "," + Password);

        if (user.equals("Vivaan") && Password.equals("Test")) {
            success.setFont(new Font("Serif", Font.BOLD, 20));
            success.setForeground(Color.GREEN);
            success.setText("Login Successful!"); // else statement wrong output//
            frame.dispose();
            new MyFrame();
        }
        else {
            success.setFont(new Font("Serif", Font.BOLD, 20));
            success.setForeground(Color.RED);
            success.setText("try again!");
        }
        System.out.println(adminUser + ", " + adminPassword);
        if (adminUser.equals("Admin") && adminPassword.equals("Admin")) {
            adminSuccess.setFont(new Font("Serif", Font.BOLD, 20));
            adminSuccess.setForeground(Color.GREEN);
            adminSuccess.setText("Login success");
            frame.dispose();
            new MyFrame();

        } else {
            adminSuccess.setFont(new Font("Serif", Font.BOLD, 20));
            adminSuccess.setForeground(Color.RED);
            adminSuccess.setText("Try Again!!");

        }

    }
}














